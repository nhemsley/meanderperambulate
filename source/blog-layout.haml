%html
  %head
    %meta{:charset => "UTF-8"}/
    %title
    = stylesheet_link_tag "normalize"
    = stylesheet_link_tag "site"
    = javascript_include_tag "less"
    = javascript_include_tag "jquery"
    = javascript_include_tag "underscore"
    = javascript_include_tag "class"
    = javascript_include_tag "raphael"
    = javascript_include_tag "jquery.raphael"
    = javascript_include_tag "app"
    :javascript
      $(document).ready(function(){new App(true)});
  %body
    #header
      #nav
    #content
      = yield
      #disqus_thread
      :javascript
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'meanderperambulate'; // required: replace example with your forum shortname
        
        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
      %noscript
        Please enable JavaScript to view the
        %a{:href => "http://disqus.com/?ref_noscript"} comments powered by Disqus.
        %a.dsq-brlink{:href => "http://disqus.com"}
          comments powered by
          %span.logo-disqus Disqus
    #footer